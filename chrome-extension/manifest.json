{
  "manifest_version": 3,
  "name": "PaperWise - Research Paper Analysis",
  "version": "1.0.0",
  "description": "Analyze research papers from arXiv with AI-powered insights",

  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "http://localhost:8000/*",
    "https://localhost:8000/*",
    "https://paperwise.yourdomain.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "PaperWise",
    "default_icon": {
      "16": "icons/brain-circuit.png",
      "48": "icons/brain-circuit.png",
      "128": "icons/brain-circuit.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["https://arxiv.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/brain-circuit.png",
    "48": "icons/brain-circuit.png",
    "128": "icons/brain-circuit.png"
  },

  "options_page": "options.html"
}
